@using Microsoft.AspNetCore.Identity
@using MoviesApplication.Data.Static
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
    var i = 0;
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h3>All Movies List</h3>
                @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.ADMIN))
                {
                    <div class="d-flex">
                        <a asp-controller="Movies" asp-action="Create" class="btn btn-outline-success me-1">Add New</a>
                        <button class="btn btn-outline-danger" id="deleteSelected">Delete Selected</button>
                    </div>
                }
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th><input class="form-check-input me-1" type="checkbox" id="select-all-movies"><span>Select All</span></th>
                            <th>No.</th>
                            <th>Poster Image</th>
                            <th>Movie Name</th>
                            <th>Release Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model)
                        {
                            <tr>
                                <td><input class="form-check-input me-1 movie-checkbox" type="checkbox"></td>
                                <td>@(++i)</td>
                                <td><img src="@movie.Poster_Image" height="100" width="100" /></td>
                                <td>@movie.Name</td>
                                <td>@movie.Release_Date</td>
                                <td>
                                    <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-outline-primary">view</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.ADMIN))
                                    {
                                        <a href="@Url.Action("Edit", "Movies", new { id = movie.Id })" class="btn btn-outline-success">Edit</a>
                                        <button class="btn btn-outline-danger delete-movie" data-id="@movie.Id">Delete</button>
                                        <form id="delete-movie-@movie.Id" action="Movies/Delete/@movie.Id" method="post">
                                            @Html.AntiForgeryToken()
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>Upload your first Movie!!</h3>
            }
        </div>
        <div class="card-footer">
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('#select-all-movies').on('change', function () {
                var isChecked = this.checked;
                $('.movie-checkbox').each(function () {
                    this.checked = isChecked;
                });
            });

            $(".delete-movie").on('click', function (event) {
                event.preventDefault();
                var id = $(this).attr("data-id");
                var form = $("#delete-movie-" + id);
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}

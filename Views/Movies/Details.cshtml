@model MoviesApplication.Models.ViewModels.MovieDetailsVM

@{
    ViewData["Title"] = "Movie Detail Page";
}

<div class="container" style="background-color: #f7f6f6;">
    <div class="row">
        <div class="col col-md-12">
            <img src="https://placehold.co/1080x720" style="width:100%;height:100%;" />
        </div>
    </div>
    @*comment sections*@
    <section style="background-color: #f7f6f6;">
        <div class="container mb-4 py-5">
            <h3 clss="mb-2 pb-2">Latest Comments</h3>
            <div class="row d-flex justify-content-start">
                <div class="col-md-12 col-lg-10 col-xl-6">
                    <div class="card">
                        <div class="card-footer py-3 border-0" style="background-color: #b1b7be;">
                            <form action="/Comment/Create" method="post">
                                @Html.AntiForgeryToken()
                                <div class="d-flex flex-start w-100">
                                    <img class="rounded-circle shadow-1-strong me-3"
                                         src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                                         height="40" />
                                    <div class="form-outline w-100" id="commentContainer">
                                        <textarea class="form-control" rows="4"
                                                  style="background: #f7f6f6;" asp-for="@Model.CommentVM.Comment.Text"></textarea>
                                        @*<input class="form-control" type="hidden" asp-for="@Model.RatingAndCommentVM.Rating.Stars" id="ratingInput" value="0" />*@
                                        <input class="form-control" type="hidden" asp-for="@Model.CommentVM.MovieId" value="@Model.MovieVM.Movie.Id" />
                                    </div>
                                </div>
                                <div class="float-end mt-2">
                                    <button type="submit" class="btn btn-primary btn-sm">Post comment</button>
                                </div>
                            </form>
                        </div>
                        @if (Model?.MovieVM.Comments?.Any() == true)
                        {
                            foreach (Comment comment in Model.MovieVM.Comments)
                            {
                                <div class="card-body">
                                    <div class="d-flex flex-start align-items-center">
                                        <img class="rounded-circle shadow-1-strong me-3"
                                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                                     height="60" />
                                        <div>
                                            <h6 class="fw-bold text-primary mb-1">@comment.CommentBy</h6>
                                            <p class="text-muted small mb-0">
                                                2023-July
                                            </p>
                                        </div>
                                    </div>

                                    <p class="mt-3 mb-4 pb-2">
                                        @comment.Text
                                    </p>

                                    <div class="small d-flex justify-content-start">
                                        <a href="#!" class="d-flex align-items-center me-3 text-decoration-none">
                                            <i class="bi bi-pencil me-1"></i>
                                            <p class="mb-0">Edit</p>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="col col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h3 class="text-uppercase">krish</h3>
                                    <small class="small text-success">Release Date - 2023/10/13</small>
                                </div>
                                <div class="rating d-flex">
                                    <form asp-controller="Rating" asp-action="Create" method="post" id="rating-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" asp-for="@Model.RatingVM.Rating.Stars" id="ratingStar" />
                                        <input type="hidden" asp-for="@Model.RatingVM.MovieId" value="@Model?.MovieVM.Movie.Id" />
                                    </form>
                                    @{
                                        int? ratings = Model?.RatingVM.Rating.Stars;
                                    }
                                    @if (ratings == 0)
                                    {
                                        <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star star" data-rating="1"></i></span>
                                        <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star star" data-rating="2"></i></span>
                                        <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star star" data-rating="3"></i></span>
                                        <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star star" data-rating="4"></i></span>
                                        <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star star" data-rating="5"></i></span>
                                    }
                                    @for(int rating = 1;rating<=5;rating++)
                                    {
                                        @if(rating<=ratings)
                                        {
                                            <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star-fill star" data-rating="@rating"></i></span>
                                        }
                                        else
                                        {
                                            <span class="p-1 text-success" style="font-size:25px;"><i class="bi bi-star star" data-rating="@rating"></i></span>
                                        }
                                    }
                                </div>
                            </div>
                            
                        </div>
                        <div class="card-body">
                            <h4>Description:</h4>
                            <div class="ps-2">
                                this is the movie description this is the movie description
                                this is the movie description
                                this is the movie description
                                this is the movie description
                                this is the movie description
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            $(".star").on("click",function(){
                var rating = $(this).attr("data-rating")
                var form = $("#rating-form")
                $("#ratingStar").val(rating)
                form.submit()
            })
        })
    </script>
}



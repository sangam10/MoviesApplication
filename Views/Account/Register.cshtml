﻿@using MoviesApplication.Models.ViewModels;
@model RegisterVM;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Form</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body>

    <div class="card d-flex align-items-center justify-content-center shadow account_card p-4">
        <form asp-action="Register">
            <div class="input-group my-3">
                <div class="mb-2 w-100">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Username">
                    </div>
                    <span asp-validation-for="FullName" class="small text-danger d-block"></span>
                </div>

                <div class="mb-2 w-100">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Email">
                    </div>
                    <span asp-validation-for="EmailAddress" class="small text-danger d-block"></span>
                </div>

                <div class="mb-2 w-100">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1"><i class="bi bi-lock"></i></span>
                        <input type="text" asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <span asp-validation-for="Password" class="small text-danger d-block"></span>
                </div>
                <div class="mb-2 w-100">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1"><i class="bi bi-lock"></i></span>
                        <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Conform Password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="small text-danger d-block"></span>
                </div>
                <div class="input-group mb-2">
                    <button class="btn btn-outline-primary">Register</button>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="input-group">
                        <div class="alert alert-danger mb-0 py-1">Error-@TempData["Error"]</div>
                    </div>
                }
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
